<form class="feuille_raoul" flexcol autocomplete="off">
    <script src="https://use.fontawesome.com/1ecf590610.js"></script>
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img src="{{actor.img}}" class="imgHero" data-edit="img" title="{{actor.name}}" height="120" />
        <div class="header-fields">
            <input name="name" type="text" value="{{actor.name}}" placeholder="Name" size="20" />
           
         {{!-- Sheet Tab Navigation --}}
        <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Général</a>
        <a class="item" data-tab="items">Equipement</a>        
        </nav>  

        </div>
    </header>

 

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- GENERAL --}}
        <div class="tab biography" data-group="primary" data-tab="description">
            <div id="raoul_cont">
                <div id="raoul_caract"><span class="titre">Gras</span><div class="div_caract"><input type="number" name="system.gras" id="caract" value="{{actor.system.gras}}">
                <img src="systems/raoul/styles/dice.png"  class="jetdedes" data-item-id="{{item._id}}" data-roll-type="item" data-dice="{{actor.system.gras}}" data-caract="GRAS"></div></div>

                <div id="raoul_caract"><span class="titre">Moelle</span><div class="div_caract"><input type="number" name="system.moelle" id="caract" value="{{actor.system.moelle}}">
                <img src="systems/raoul/styles/dice.png" class="jetdedes" data-dice="{{actor.system.moelle}}" data-caract="MOELLE"></div></div>

                <div id="raoul_caract"><span class="titre">Culot</span><div class="div_caract"><input type="number" name="system.culot" id="caract" value="{{actor.system.culot}}">
                <img src="systems/raoul/styles/dice.png" class="jetdedes" data-dice="{{actor.system.culot}}" data-caract="CULOT"></div> </div>
            </div>
            <br />&nbsp;<br />
            <div id="raoul_cont">
                <table id="table_raoul">

                    
                    {{#each Domicile as |item key|}}<tr class="item" data-item-id="{{item._id}}"><td>Origine :</td>
                        <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                            <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr> 
                    {{/each}}

                    {{#each Origine as |item key|}} 
                    <tr class="item" data-item-id="{{item._id}}"><td width="80">Origine :</td>
                        <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                            <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr>
                    {{/each}}
                    {{#each Metier as |item key|}} 
                    <tr class="item" data-item-id="{{item._id}}"><td>Métier :</td>
                    <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                        <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr>
                    {{/each}}
                    {{#each Modedevie as |item key|}} 
                    <tr class="item" data-item-id="{{item._id}}"><td>Mode de vie :</td>
                        <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                            <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr>
                    {{/each}}
                    {{#each Passetemps as |item key|}} 
                    <tr class="item" data-item-id="{{item._id}}"><td>Passe temps :</td>
                        <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                            <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr>
                    {{/each}}
                </table>
            </div>
            <div id="raoul_cont">
                <h1>Baraka</h1>
               <table> 
 {{#each Baraka as |item id|}}
<tr class="item" data-item-id="{{item._id}}">
                        <td><img src="{{item.img}}" class="imgObjet" data-edit="img" title="{{item.name}}" height="16" />
                            <a class="item-edit" title="Editer">{{item.name}}</a>  <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a> </td></tr>
  {{/each}}
</table> 
            </div>
        </div>



        {{!-- EQUIPEMENT --}}
        <div class="tab items" data-group="primary" data-tab="items"> 
            <div id="raoul_cont">
                <span class="titre">Equipements</span>
                <table>
                {{#each actor.system.objet as |item key|}}
                <tr class="item" data-item-id="{{item._id}}">
                    <td><img src="{{item.img}}" class="imgHero" data-edit="img" title="{{item.name}}" height="32" /></td>
                    <td><b>{{item.name}}</b></td>
                    <td>
                        <a class="item-edit" title="Editer"><i class="fas fa-edit"></i></a>
                        <a class="item-delete" title="Supprimer"><i class="fas fa-trash"></i></a>
                    </td></tr>
                {{/each}}  
            </table>
            </div> 
            <div id="raoul_cont">
                <h2>Description de {{actor.name}}</h2>
                <textarea name="system.description" rows="10">{{actor.system.description}}</textarea>
            </div>             
        </div>
        
    </section>
</form>